{
    "manifest_version": 3,
    "name": "Universal Video Downloader",
    "version": "1.0.0",
    "description": "Detect and download videos (MP4/WebM/HLS/DASH). Record tab fallback. Screenshots. MV3.",
    "permissions": [
        "storage",
        "downloads",
        "activeTab",
        "scripting",
        "webRequest",
        "offscreen",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Video Downloader",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "utils/common.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "inject/injector.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/fullpage.html", "inject/hook.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
